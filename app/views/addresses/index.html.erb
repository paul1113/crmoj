<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Type</th>
      <th>National</th>
      <th>Province</th>
      <th>City</th>
      <th>Address</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.uuid %></td>
        <td><%= address.type %></td>
        <td><%= address.national %></td>
        <td><%= address.province %></td>
        <td><%= address.city %></td>
        <td><%= address.address %></td>
        <td><%= address.postcode %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
